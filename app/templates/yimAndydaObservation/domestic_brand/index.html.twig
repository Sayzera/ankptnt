	<script src="https://unpkg.com/tippy.js@6/dist/tippy-bundle.umd.js"></script>
	<script src="{{ asset('assets/vendor/select2/js/select2.full.min.js') }}"></script>
	<script src="{{ asset('assets/js/plugins-init/select2-init.js') }}"></script>
	<script type="text/javascript" src="{{ asset('assets/vendor/moment/moment.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('assets/vendor/daterangepicker/daterangepicker.js') }}"></script>
	<script src="{{ asset('assets/js/yim-and-yda-observation/yda-and-yim.js')}}"></script>
	<script src="{{ asset('assets/js/yim-and-yda-observation/yda.js')}}"></script>
	<script src="{{ asset('assets/js/yim-and-yda-observation/yda-and-yim-select2.js')}}"></script>



	<script>
	// remove LocalStorage
	localStorage.removeItem('bultenNo');
	</script>
{% endblock %}
