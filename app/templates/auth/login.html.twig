{% extends "auth/layout.html.twig" %}

{% block body %}
	<div class="authincation h-100">
		<div class="container h-100">
			<div class="row justify-content-center h-100 align-items-center">
				<div class="col-md-6">
					<div class="authincation-content">
						<div class="row no-gutters">
							<div class="col-xl-12">
								<div class="auth-form">
									<div class="text-center mb-3">
										<a href="index.html"><img src="images/logo-full.png" alt=""></a>
									</div>
									<h4 class="text-center mb-4">Giriş Yapınız</h4>
									{% if error %}
										<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}
									<form action=" {{ path('app_login') }}" method="post">
										<input type="hidden" name="_target_path" value="{{ path('app_main') }}">

										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

										<div class="mb-3">
											<label class="mb-1">
												<strong>E Posta</strong>
											</label>
											<input type="email" id="_username" name="_username" class="form-control" value="ali.yilmaz@ankarapatent.com">
										</div>
										<div class="mb-3">
											<label class="mb-1">
												<strong>Şifre</strong>
											</label>
											<input type="password" id="password" name="_password" class="form-control" value="password">
										</div>
										<div class="row d-flex justify-content-between mt-4 mb-2">
											<div class="mb-3">
												<div class="form-check custom-checkbox ms-1">
													<input type="checkbox" class="form-check-input" id="basic_checkbox_1">
													<label class="form-check-label" for="basic_checkbox_1">Beni Hatırla</label>
												</div>
											</div>
											<div class="mb-3">
												<a href="page-forgot-password.html">Şifremi Unuttum</a>
											</div>
										</div>
										<div class="text-center">
											<button type="submit" name="login-btn" class="btn btn-primary btn-block">Giriş yap</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
